<body class="bg-gray-50">
  <div class="flex min-h-screen">


    <!-- Main Content -->
    <div class="flex-1">


      <!-- Hero Section -->
      <div class="p-4">
        <div class="bg-gray-100 rounded-lg p-8 mb-6 flex items-center"
          style="background-image: url('/api/placeholder/800/200'); background-size: cover; background-position: right;">
          <div class="flex justify-between w-full">
            <div class="w-1/2">
              <h1 class="text-3xl font-bold text-gray-800">Welcome back! SwiftMart</h1>
              <p class="text-gray-600 my-2">SwiftMart is simple & clean design for developer and designer.</p>
             
            </div>
           
          </div>
        </div>

        <!-- Stats Cards -->
        <div class="grid grid-cols-3 gap-6 mb-6">
          <!-- Earnings Card -->
          <div class="bg-white p-6 rounded-lg shadow-sm border">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-gray-700 font-medium">Earnings</h2>
              <div class="h-10 w-10 rounded-full bg-red-100 flex items-center justify-center text-red-500">
                <i class="fas fa-dollar-sign"></i>
              </div>
            </div>
            <h3 class="text-3xl font-bold text-gray-800">
              <%= Math.round(totalCartAmount) %>
            </h3>
            <p class="text-gray-500 text-sm">Monthly revenue</p>
          </div>

          <!-- Orders Card -->
          <div class="bg-white p-6 rounded-lg shadow-sm border">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-gray-700 font-medium">Orders</h2>
              <div class="h-10 w-10 rounded-full bg-yellow-100 flex items-center justify-center text-yellow-500">
                <i class="fas fa-shopping-cart"></i>
              </div>
            </div>
            <h3 class="text-3xl font-bold text-gray-800">
              <%= customerOrders %>
            </h3>
            <p class="text-gray-500 text-sm">35+ New Sales</p>
          </div>

          <!-- Customer Card -->
          <div class="bg-white p-6 rounded-lg shadow-sm border">
            <div class="flex items-center justify-between mb-4">
              <h2 class="text-gray-700 font-medium">Customer</h2>
              <div class="h-10 w-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-500">
                <i class="fas fa-users"></i>
              </div>
            </div>
            <h3 class="text-3xl font-bold text-gray-800">
              <%= CustomerCount %>
            </h3>
            <p class="text-gray-500 text-sm">30+ new in 2 days</p>
          </div>
        </div>

        <!-- Charts Section with Revenue and Total Sales Side by Side -->
        <div class="flex gap-6 mb-6">
          <!-- Revenue Chart -->
          <div class="bg-white p-6 rounded-lg shadow-sm border flex-grow">
            <div class="flex items-center justify-between mb-4">
              <div>
                <h2 class="text-gray-700 font-medium">Revenue</h2>
                <p class="text-gray-500 text-sm">(+63% than last year)</p>
              </div>
              <div class="border rounded p-2">
                <select class="outline-none">
                  <option>2019</option>
                </select>
              </div>
            </div>
            <!-- Placeholder for chart -->
            <div class="h-64 bg-gray-50 rounded-lg relative">
              <!-- Green line chart -->
              <svg width="100%" height="100%" viewBox="0 0 700 240">
                <!-- Grid lines -->
                <line x1="0" y1="40" x2="700" y2="40" stroke="#eee" stroke-width="1" />
                <line x1="0" y1="80" x2="700" y2="80" stroke="#eee" stroke-width="1" />
                <line x1="0" y1="120" x2="700" y2="120" stroke="#eee" stroke-width="1" />
                <line x1="0" y1="160" x2="700" y2="160" stroke="#eee" stroke-width="1" />
                <line x1="0" y1="200" x2="700" y2="200" stroke="#eee" stroke-width="1" />

                <!-- Yellow area chart -->
                <path
                  d="M50,80 C100,100 150,60 200,100 C250,150 350,50 400,80 C450,120 550,80 650,100 L650,200 L50,200 Z"
                  fill="rgba(255,215,0,0.15)" />
                <path d="M50,80 C100,100 150,60 200,100 C250,150 350,50 400,80 C450,120 550,80 650,100" stroke="gold"
                  stroke-width="2" fill="none" />

                <!-- Green area chart -->
                <path
                  d="M50,150 C100,120 150,140 200,90 C300,140 400,120 500,60 C550,40 600,80 650,40 L650,200 L50,200 Z"
                  fill="rgba(0,128,0,0.1)" />
                <path d="M50,150 C100,120 150,140 200,90 C300,140 400,120 500,60 C550,40 600,80 650,40" stroke="green"
                  stroke-width="2" fill="none" />

                <!-- Data points -->
                <circle cx="50" cy="150" r="4" fill="green" />
                <circle cx="150" cy="140" r="4" fill="green" />
                <circle cx="300" cy="140" r="4" fill="green" />
                <circle cx="400" cy="120" r="4" fill="green" />
                <circle cx="500" cy="60" r="4" fill="green" />
                <circle cx="650" cy="40" r="4" fill="green" />

                <circle cx="50" cy="80" r="4" fill="gold" />
                <circle cx="150" cy="60" r="4" fill="gold" />
                <circle cx="250" cy="150" r="4" fill="gold" />
                <circle cx="400" cy="80" r="4" fill="gold" />
                <circle cx="550" cy="80" r="4" fill="gold" />
                <circle cx="650" cy="100" r="4" fill="gold" />

                <!-- X-axis labels -->
                <text x="50" y="220" text-anchor="middle" font-size="12" fill="#666">Jan</text>
                <text x="150" y="220" text-anchor="middle" font-size="12" fill="#666">Feb</text>
                <text x="250" y="220" text-anchor="middle" font-size="12" fill="#666">March</text>
                <text x="350" y="220" text-anchor="middle" font-size="12" fill="#666">April</text>
                <text x="450" y="220" text-anchor="middle" font-size="12" fill="#666">May</text>
                <text x="550" y="220" text-anchor="middle" font-size="12" fill="#666">Jun</text>
                <text x="650" y="220" text-anchor="middle" font-size="12" fill="#666">Jul</text>

                <!-- Y-axis labels -->
                <text x="25" y="205" text-anchor="middle" font-size="12" fill="#666">30k</text>
                <text x="25" y="165" text-anchor="middle" font-size="12" fill="#666">40k</text>
                <text x="25" y="125" text-anchor="middle" font-size="12" fill="#666">60k</text>
                <text x="25" y="85" text-anchor="middle" font-size="12" fill="#666">80k</text>
                <text x="25" y="45" text-anchor="middle" font-size="12" fill="#666">100k</text>
              </svg>

              <div class="absolute top-0 right-0 flex items-center p-2 text-xs">
                <span class="flex items-center mr-4"><span class="h-2 w-2 bg-green-500 rounded-full mr-1"></span> Total
                  Income</span>
                <span class="flex items-center"><span class="h-2 w-2 bg-yellow-400 rounded-full mr-1"></span> Total
                  Expense</span>
              </div>
            </div>
          </div>

          <!-- Total Sales Chart (Moved to the side) -->
          <div class="bg-white p-6 rounded-lg shadow-sm border w-1/3">
            <h2 class="text-gray-700 font-medium mb-4">Total Sales</h2>
            <!-- Donut Chart -->
            <div class="flex justify-center items-center h-48">
              <div class="relative w-40 h-40">
                <svg viewBox="0 0 100 100">
                  <circle cx="50" cy="50" r="45" fill="none" stroke="#eee" stroke-width="10" />
                  <circle cx="50" cy="50" r="45" fill="none" stroke="green" stroke-width="10" stroke-dasharray="282.6"
                    stroke-dashoffset="70" />
                  <circle cx="50" cy="50" r="45" fill="none" stroke="red" stroke-width="10" stroke-dasharray="282.6"
                    stroke-dashoffset="260" transform="rotate(-90 50 50)" />
                  <circle cx="50" cy="50" r="45" fill="none" stroke="yellow" stroke-width="10" stroke-dasharray="282.6"
                    stroke-dashoffset="230" transform="rotate(-40 50 50)" />
                  <circle cx="50" cy="50" r="45" fill="none" stroke="blue" stroke-width="10" stroke-dasharray="282.6"
                    stroke-dashoffset="200" transform="rotate(40 50 50)" />
                </svg>
                <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 text-center">
                  <div class="text-green-500 text-sm font-medium">Total Sales</div>
                  <div class="text-2xl font-bold">9600</div>
                </div>
              </div>
            </div>
            <div class="mt-4">
              <div class="flex items-center text-sm my-1">
                <span class="h-2 w-2 bg-green-500 rounded-full mr-2"></span>
                <span class="text-gray-700">Shippings 32.98 (2%)</span>
              </div>
              <div class="flex items-center text-sm my-1">
                <span class="h-2 w-2 bg-yellow-500 rounded-full mr-2"></span>
                <span class="text-gray-700">Refunds 11.00 (11%)</span>
              </div>
              <div class="flex items-center text-sm my-1">
                <span class="h-2 w-2 bg-red-500 rounded-full mr-2"></span>
                <span class="text-gray-700">Order 14.87 (1%)</span>
              </div>
              <div class="flex items-center text-sm my-1">
                <span class="h-2 w-2 bg-blue-500 rounded-full mr-2"></span>
                <span class="text-gray-700">Income 12.00 (86%)</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Recent Orders (Full Width) -->


        <!-- Sales Overview and Notification Section Moved to Bottom -->
        <div class="grid grid-cols-2 gap-6 mb-6">
          <!-- Sales Overview -->
          <div class="bg-white p-6 rounded-lg shadow-sm border">
            <h2 class="text-gray-700 font-medium mb-6">Sales Overview</h2>

            <div class="mb-4">
              <div class="flex items-center justify-between mb-1">
                <span class="text-sm">Total Profit</span>
                <span class="text-sm">1,619 (8.6%)</span>
              </div>
              <div class="w-full bg-gray-200 h-2 rounded-full">
                <div class="bg-green-500 h-2 rounded-full" style="width: 8.6%"></div>
              </div>
            </div>

            <div class="mb-4">
              <div class="flex items-center justify-between mb-1">
                <span class="text-sm">Total Income</span>
                <span class="text-sm">3,571 (86.4%)</span>
              </div>
              <div class="w-full bg-gray-200 h-2 rounded-full">
                <div class="bg-blue-500 h-2 rounded-full" style="width: 86.4%"></div>
              </div>
            </div>

            <div class="mb-4">
              <div class="flex items-center justify-between mb-1">
                <span class="text-sm">Total Expenses</span>
                <span class="text-sm">3,430 (74.5%)</span>
              </div>
              <div class="w-full bg-gray-200 h-2 rounded-full">
                <div class="bg-red-500 h-2 rounded-full" style="width: 74.5%"></div>
              </div>
            </div>
          </div>

          <!-- Notifications -->
          <div class="flex flex-col gap-4">
            <div class="bg-white p-6 rounded-lg shadow-sm border">
              <div class="flex items-start">
                <div class="text-yellow-500 mr-4 text-2xl">
                  <i class="fa-solid fa-bell"></i>
                </div>
                <div>
                  <h2 class="text-gray-700 font-medium">Start your day with New Notification.</h2>
                  <p class="text-gray-500 text-sm mt-1">You have <span class="text-blue-500">2 new notification</span>
                  </p>
                </div>
              </div>
            </div>

            <div class="bg-white p-6 rounded-lg shadow-sm border">
              <div class="flex items-start">
                <div class="text-green-500 mr-4 text-2xl">
                  <i class="fa-solid fa-lightbulb"></i>
                </div>
                <div>
                  <h2 class="text-gray-700 font-medium">Monitor your Sales and Profitability</h2>
                  <p class="text-gray-500 text-sm mt-1">You have <span class="text-blue-500">View Performance</span></p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white p-6 rounded-lg shadow-sm border mb-6 w-full">
          <h2 class="text-gray-700 font-medium mb-4">Recent Order</h2>
          <div class="overflow-x-auto">
            <table class="w-full">
              <thead>
                <tr class="bg-gray-50">
                  <th class="p-3 text-left text-sm font-medium text-gray-500">Order Number</th>
                  <th class="p-3 text-left text-sm font-medium text-gray-500">Product Name</th>
                  <th class="p-3 text-left text-sm font-medium text-gray-500">Order Date</th>
                  <th class="p-3 text-left text-sm font-medium text-gray-500">Price</th>
                </tr>
              </thead>
              <tbody>
                <% registeredProducts.forEach(product=> { %>

                  <tr class="border-b">
                    <td class="p-3 text-sm text-gray-700">
                      <img src=<%=product.image %> alt="Haldiram's Sev Bhujia" class="w-10 h-10 rounded">
                    </td>
                    <td class="p-3 text-sm text-gray-700">
                      <%= product.title %>
                    </td>
                    <td class="p-3 text-sm text-gray-700">
                      <%= (product.createdAt ).toString().split("T")?.[0]%>
                    </td>
                    <td class="p-3 text-sm text-gray-700">
                      <%= product.price %>
                    </td>
                  </tr>
                  <% }); %>

              </tbody>

            </table>
          </div>
        </div>



      </div>
    </div>
  </div>
</body>