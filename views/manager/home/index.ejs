
<body class="bg-green-50">
    <!-- Header -->
    <header class="bg-white shadow-md">
        <div class="max-w-7xl mx-auto px-4 py-5 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center">
                <h1 class="text-2xl font-bold text-green-700">Manager Dashboard</h1>
                <button onclick="logout()" class="px-4 py-2 bg-red-500 text-white rounded-md hover:bg-red-600">Logout</button>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-8 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Seller Verification Card -->
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-green-700">Seller Verification</h2>
                    <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm">Pending: 5</span>
                </div>
                <p class="text-gray-600 mb-4">Review and verify new seller registrations</p>
                <a href="/api/v1/manager/sellers" class="inline-block bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors">
                    View Sellers
                </a>
            </div>

            <!-- Product Verification Card -->
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-green-700">Product Verification</h2>
                    <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm">Pending: 12</span>
                </div>
                <p class="text-gray-600 mb-4">Verify new products added by sellers</p>
                <a href="/api/v1/manager/products" class="inline-block bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors">
                    View Products
                </a>
            </div>

            <!-- Order Management Card -->
            <div class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-green-700">Order Management</h2>
                    <span class="bg-yellow-100 text-yellow-800 px-3 py-1 rounded-full text-sm">Active: 8</span>
                </div>
                <p class="text-gray-600 mb-4">Monitor and update order statuses</p>
                <a href="/api/v1/manager/orders" class="inline-block bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors">
                    View Orders
                </a>
            </div>
        </div>

        <!-- Recent Activity Section -->
        <div class="mt-8">
            <h2 class="text-xl font-semibold text-green-700 mb-4">Recent Activity</h2>
            <div class="bg-white rounded-lg shadow-md overflow-hidden">
                <div class="divide-y divide-gray-200">
                    <div class="p-4 hover:bg-green-50">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-800">New seller "TechGadgets" registration verified</p>
                                <p class="text-sm text-gray-500">2 hours ago</p>
                            </div>
                            <span class="px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">seller</span>
                        </div>
                    </div>
                    <div class="p-4 hover:bg-green-50">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-800">Product "Smart Watch X3" approved</p>
                                <p class="text-sm text-gray-500">3 hours ago</p>
                            </div>
                            <span class="px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">product</span>
                        </div>
                    </div>
                    <div class="p-4 hover:bg-green-50">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-800">Order #12345 status updated to "Shipped"</p>
                                <p class="text-sm text-gray-500">5 hours ago</p>
                            </div>
                            <span class="px-3 py-1 rounded-full text-sm bg-purple-100 text-purple-800">order</span>
                        </div>
                    </div>
                    <div class="p-4 hover:bg-green-50">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-800">New seller "HomeDecor" registration pending</p>
                                <p class="text-sm text-gray-500">6 hours ago</p>
                            </div>
                            <span class="px-3 py-1 rounded-full text-sm bg-blue-100 text-blue-800">seller</span>
                        </div>
                    </div>
                    <div class="p-4 hover:bg-green-50">
                        <div class="flex items-center justify-between">
                            <div>
                                <p class="text-gray-800">Product "Wireless Earbuds Pro" pending review</p>
                                <p class="text-sm text-gray-500">8 hours ago</p>
                            </div>
                            <span class="px-3 py-1 rounded-full text-sm bg-green-100 text-green-800">product</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        function logout() {
            window.location.href = '/api/v1/manager/logout';
        }
    </script>
</body>

