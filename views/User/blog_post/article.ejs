        <h1 class="text-4xl font-bold mt-2 text-gray-900 leading-tight"><%= blog.title %></h1>

        <div class="flex items-center text-sm text-gray-500 mt-2 space-x-6">
            <span class="flex items-center"><i class="far fa-user mr-2"></i> <%= blog.author %></span>
            <span class="flex items-center"><i class="far fa-calendar mr-2"></i> <%= blog.date %></span>
        </div>

        <img src="<%= blog.image %>" class="mt-6 w-full h-96 object-cover rounded-lg shadow-md" alt="<%= blog.title %>">

        <p class="mt-6 text-gray-700 text-lg leading-relaxed">
            <%= blog.description %>
           
